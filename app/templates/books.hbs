<h1>
  Books
</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>
        Title
        <br />
        <small class="small not-bold">
          (Click on name for editing)
        </small>
      </th>
      <th class="vtop">
        Author
      </th>
      <th class="vtop">
        Library
      </th>
      <th class="vtop">
        Release year
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each this.model as |book|}}
      <tr>
        <td>
          {{#if book.isEditing}}
            <form class="form-inline" {{action "saveBook" book on="submit"}}>
              <div class="input-group">
                {{input value=book.title class="form-control"}}
                <div class="input-group-btn">
                  <button
                    type="submit"
                    class="btn btn-success"
                    disabled={{book.isNotValid}}
                  >
                    Save
                  </button>
                  <button
                    class="btn btn-danger"
                    {{action "cancelBookEdit" book}}
                  >
                    Cancel
                  </button>
                </div>
              </div>
            </form>
          {{else}}
            <span {{action "editBook" book}}>
              {{book.title}}
            </span>
          {{/if}}
        </td>
        <td>
          {{book.author.name}}
        </td>
        <td>
          {{book.library.name}}
        </td>
        <td>
          {{book.releaseYear}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>