<h2>
  List
</h2>
<div class="row row-cols-3">
  {{#each this.model as |library|}}
    <div class="col mb-2">
      {{#library-item item=library}}
        {{#link-to "libraries.edit" library.id class="btn btn-success btn-xs"}}
          Edit
        {{/link-to}}
        <button
          class="btn btn-danger btn-xs"
          {{action "deleteLibrary" library}}
        >
          Delete
        </button>
      {{/library-item}}
    </div>
  {{/each}}
</div>