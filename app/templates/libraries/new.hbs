<h2>
  Add a new local Library
</h2>
<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">
      {{input
        type="text"
        value=this.model.name
        class="form-control"
        placeholder="The name of the Library"
      }}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">
      Address
    </label>
    <div class="col-sm-10">
      {{input
        type="text"
        value=this.model.address
        class="form-control"
        placeholder="The address of the Library"
      }}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">
      Phone
    </label>
    <div class="col-sm-10">
      {{input
        type="text"
        value=this.model.phone
        class="form-control"
        placeholder="The phone number of the Library"
      }}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button
        type="submit"
        class="btn btn-primary"
        {{action "saveLibrary" model}}
      >
        Add to library list
      </button>
    </div>
  </div>
</div>